<h1>id: <%= @customers.id %> の編集ページ</h1>

<%= form_for(@customers) do |f| %>
  <%= f.label :company, "会社" %>
  <%= f.text_field :company %>
  <%= f.label :phone, "電話番号" %>
  <%= f.text_field :phone %>
  <%= f.label :server, "監視サーバ" %>
  <%= f.text_field :server %>
  <%= f.label :remark, "備考" %>
  <%= f.text_field :remark %>
  
  <%= f.submit "投稿" %>
<% end %>

<%= link_to "一覧に戻る", customers_path %>